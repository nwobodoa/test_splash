<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppSplash.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red_200</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_budget_buddy</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.BudgetBuddy</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>